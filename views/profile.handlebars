<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Your Favorite Pets</h3>
  </div>

  {{#if pets.length}}
  <div class="col-md-6 pet-list">
    <h3>Favorite Pets:</h3>

    {{#each pets as |pet|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/pet/{{pet.id}}">{{pet.name}}</a></h4>
        <h4> {{pet.type}} </h4>
        <p> {{pet.primary_breed}} </p>
        <p> {{pet.age}} </p>
        <p> {{pet.gender}} </p>
        <p> {{pet.size}} </p>

      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{pet.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
